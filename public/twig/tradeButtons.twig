<button type="button" id="received" class="btn btn-success" amount={{recData|length}}>Incoming Trade Requests ({{recData|length}} incoming)</button>
<button type="button" id="requested" class="btn btn-info" amount={{reqData|length}}>Your Trade Requests ({{reqData|length}} outstanding)</button>
<div id="recTrades">
    {%for trade in recData%}
        <div class="trade received" for-book="{{trade.book}}">
            <h3>{{trade.book}}</h3>
            {%if not trade.completed%}
            <button class="deny-trade" for-book="{{trade.book}}" for-user="{{trade.from}}"><span class="fa fa-times"></span></button>
            <button class="accept-trade" for-book="{{trade.book}}" for-user="{{trade.from}}"><span class="fa fa-check"></span></button>
            {%else%}
            <h4 style="color: Chartreuse;">You accepted this trade.</h4>
            {%endif%}
        </div>
    {%endfor%}
</div>
<div id="reqTrades">
    {%for trade in reqData%}
        <div class="trade requested">
            <h3>{{trade.book}}</h3>
            {%if trade.completed %}
            <h4 style="color: Chartreuse;"> This trade has been accepted! </h4>
            {%endif%}
            <button class="cancel-trade" for-book="{{trade.book}}"><span class="fa fa-times"></span></button>
        </div>
    {%endfor%}
</div>